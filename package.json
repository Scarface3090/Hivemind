{
  "private": true,
  "name": "hvmtestapp1",
  "version": "0.0.0",
  "license": "BSD-3-Clause",
  "type": "module",
  "scripts": {
    "postinstall": "npm run build:client && npm run build:server",
    "build:client": "cd src/client && vite build --mode production",
    "build:server": "cd src/server && vite build --mode production",
    "build": "npm run build:client && npm run build:server",
    "check": "npm run type-check && npm run lint:fix && npm run prettier",
    "deploy": "npm run build && devvit upload",
    "dev": "concurrently -k -p \"[{name}]\" -n \"CLIENT,SERVER,DEVVIT\" -c \"blue,green,magenta\" \"npm run dev:client\" \"npm run dev:server\" \"npm run dev:devvit\"",
    "dev:client": "cd src/client && vite build --watch",
    "dev:devvit": "dotenv -e .env -- devvit playtest",
    "dev:server": "cd src/server && vite build --watch",
    "lint": "eslint ./src",
    "lint:fix": "eslint --fix ./src",
    "login": "devvit login --copy-paste",
    "launch": "npm run build && npm run deploy && devvit publish",
    "prettier": "prettier-package-json --write ./package.json && prettier --write .",
    "type-check": "tsc --build",
    "test": "vitest"
  },
  "dependencies": {
    "@devvit/web": "0.12.0",
    "@tanstack/react-query": "5.60.5",
    "devvit": "0.12.0",
    "express": "5.1.0",
    "phaser": "3.88.2",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-router-dom": "6.29.0",
    "uuid": "^13.0.0",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "9.23.0",
    "@types/express": "5.0.1",
    "@types/node": "22.10.1",
    "@types/react": "18.3.11",
    "@types/react-dom": "18.3.0",
    "@types/supertest": "6.0.3",
    "@types/uuid": "^10.0.0",
    "concurrently": "9.1.2",
    "dotenv-cli": "8.0.0",
    "eslint": "9.23.0",
    "globals": "15.15.0",
    "prettier": "3.5.3",
    "prettier-package-json": "2.8.0",
    "supertest": "7.0.0",
    "terser": "5.39.0",
    "typescript": "5.8.2",
    "typescript-eslint": "8.29.0",
    "vite": "6.2.4",
    "vitest": "3.1.1"
  }
}
