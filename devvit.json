{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "hvmtestapp1",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "entry": "index.html",
        "inline": true
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "reddit": {
    "api": true,
    "asUser": [
      "SUBMIT_COMMENT"
    ]
  },
  "permissions": {
    "reddit": {
      "enable": true,
      "asUser": ["SUBMIT_COMMENT"]
    }
  },
  "scheduler": {
    "tasks": {
      "game-lifecycle-tick": {
        "endpoint": "/internal/scheduler/game-lifecycle-tick",
        "cron": "*/1 * * * *"
      },
      "game-reveal": {
        "endpoint": "/internal/scheduler/game-reveal"
      }
    }
  },
  "menu": {
    "items": [
      {
        "label": "Create a new post",
        "description": "hvmtestapp1",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      }
    ]
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install"
  },
  "dev": {
    "subreddit": "hvmndd_dev2"
  }
}
